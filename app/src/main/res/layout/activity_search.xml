<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_activity_height"
        android:paddingTop="16dp"
        android:background="@color/app_theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/search_back_marleft"
            android:src="@drawable/search_back" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/search_back_marleft"
            android:layout_weight="1"
            android:drawableRight="@drawable/btn_search"
            android:hint="@string/plan_search_hint"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:textColorHint="#fff" />

        <ImageView
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/search_margin_right"
            android:src="@drawable/search_clear" />

    </LinearLayout>

    <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/downListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eda981"
        android:visibility="gone" />


</LinearLayout>