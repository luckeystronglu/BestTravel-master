<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:divider="@drawable/diliver_des_item"
    android:showDividers="middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inspiration_relative"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <ImageView
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:id="@+id/inspiration_mark_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_plan_scenery"/>

        <TextView
            android:id="@+id/tv_scenery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="景点标题介绍"
            android:textSize="18sp"
            android:textColor="#111010"
            android:layout_toRightOf="@+id/inspiration_mark_img"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:layout_toRightOf="@+id/inspiration_mark_img"
            android:layout_alignLeft="@+id/tv_scenery_title"
            android:layout_below="@+id/tv_scenery_title">

                <TextView
                    android:text="距离"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#615f5f"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/inspi_num"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/app_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="公里"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#615f5f"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/inspiration_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <!--android:visibility="gone"-->
        <ImageView
            android:id="@+id/travel_days_scenery_bigimg"
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_placeholder"/>
        <TextView
            android:id="@+id/travel_days_scenery_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#111010"
            android:text="景区详情供介绍"/>

        <TextView
            android:id="@+id/travel_days_plan_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查看攻略"
            android:clickable="true"
            android:background="@drawable/plan_sce_button_shape"/>
    </LinearLayout>




</LinearLayout>