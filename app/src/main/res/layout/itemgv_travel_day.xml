<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:divider="@drawable/diliver_des_item"
    android:showDividers="middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/travel_days_relative"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <ImageView
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:id="@+id/travel_day_leftmark_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_plan_scenery"/>

        <TextView
            android:id="@+id/tv_scenery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点标题介绍"
            android:textSize="18sp"
            android:textColor="#111010"
            android:layout_toRightOf="@+id/travel_day_leftmark_img"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:layout_toRightOf="@+id/travel_day_leftmark_img"
            android:layout_alignLeft="@+id/tv_scenery_title"
            android:layout_below="@+id/tv_scenery_title">
            <TextView
                android:id="@+id/tv_scenery_city"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厦门"/>

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · "/>

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离上一站"/>
            <TextView
                android:id="@+id/tv_scenery_last_distance"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.4"/>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里"/>

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · "/>
            <TextView
                android:id="@+id/tv_scenery_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="建议玩半个小时"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/travel_days_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:orientation="vertical">
        <!--android:visibility="gone"-->
        <ImageView
            android:id="@+id/travel_days_scenery_bigimg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_placeholder"/>
        <TextView
            android:id="@+id/travel_days_scenery_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#111010"
            android:text="景区详情供介绍"/>

        <TextView
            android:id="@+id/travel_days_plan_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查看攻略与游记"
            android:clickable="true"
            android:background="@drawable/plan_sce_button_shape"/>
    </LinearLayout>




</LinearLayout>