<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/summary_ll_show"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summap_type01_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingTop="10dp"
                android:text="成都"
                android:textColor="#111010"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/summap_type01_aftertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingTop="10dp"
                android:text=", 慢节奏"
                android:textColor="#111010"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/summap_secondtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="距离"
            android:textColor="#615f5f" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/summary_hide_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        >
        <!--android:visibility="gone"-->
        <ImageView
            android:id="@+id/sumll_hide_bigimg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_placeholder" />

        <TextView
            android:id="@+id/sumll_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="景区详情供介绍"
            android:textColor="#111010"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/summary_map_lookmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/plan_sce_button_shape"
            android:clickable="true"
            android:text="查看地图" />
    </LinearLayout>


</LinearLayout>